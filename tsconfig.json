{
  "compilerOptions": {
      "target": "es2022",
      "module": "NodeNext",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,
      "strict": true,
      "skipLibCheck": true,
      "allowSyntheticDefaultImports": true,
      "noImplicitAny": true,
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "rootDir": "./src",
      "composite": true,
      "declaration": true,
      "paths": {
          "": ["node_modules/"]
      }
  },
  "include": ["src/**/*", "dist/index.js"]
}